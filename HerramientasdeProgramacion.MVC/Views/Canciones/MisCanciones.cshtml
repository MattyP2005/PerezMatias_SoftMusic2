@model List<HerramientasdeProgramacion.Modelos.Cancion>

@{
    ViewData["Title"] = "Mis Canciones";
}

<h2>🎙️ Mis Canciones Subidas</h2>

@if (!Model.Any())
{
    <p>No has subido ninguna canción todavía.</p>
}
else
{
    <div class="row">
        @foreach (var c in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card p-3 shadow-sm">
                    <h5>@c.Titulo</h5>
                    <p class="text-muted">@c.Genero</p>
                    <audio controls src="@c.Url" style="width: 100%;"></audio>
                    <p class="text-end"><small>@c.FechaSubida.ToShortDateString()</small></p>
                </div>
            </div>
        }
    </div>
}