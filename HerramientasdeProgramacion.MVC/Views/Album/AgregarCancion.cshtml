@using HerramientasdeProgramacion.Modelos.ViewModels
@model AgregarCancionViewModel

@{
    ViewData["Title"] = "Agregar Canciones al Álbum";
}

<h2 class="text-primary">Agregar canciones a "@Model.AlbumTitulo"</h2>

<form asp-action="AgregarCancion" method="post">
    @Html.HiddenFor(m => m.AlbumId)

    <table class="table">
        <thead>
            <tr>
                <th>Seleccionar</th>
                <th>Título</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Canciones.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="Canciones[@i].Seleccionada" value="true" />
                        <input type="hidden" name="Canciones[@i].CancionId" value="@Model.Canciones[i].CancionId" />
                        <input type="hidden" name="Canciones[@i].Titulo" value="@Model.Canciones[i].Titulo" />
                    </td>
                    <td>@Model.Canciones[i].Titulo</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Agregar Canciones</button>
</form>|