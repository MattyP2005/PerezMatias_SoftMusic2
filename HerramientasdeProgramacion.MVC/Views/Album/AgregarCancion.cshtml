@using HerramientasdeProgramacion.Modelos.ViewModels
@model AgregarCancionViewModel

<h2>Agregar canciones a "@Model.AlbumTitulo"</h2>

<form asp-action="AgregarCanciones" method="post">
    <input type="hidden" asp-for="AlbumId" />

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Agregar</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Canciones.Count; i++)
            {
                <tr>
                    <td>@Model.Canciones[i].Titulo</td>
                    <td>
                        <input type="checkbox" asp-for="Canciones[@i].Seleccionada" />
                        <input type="hidden" asp-for="Canciones[@i].CancionId" />
                        <input type="hidden" asp-for="Canciones[@i].Titulo" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Agregar canciones</button>
</form>