@model HerramientasdeProgramacion.Modelos.Cancion

@{
    ViewData["Title"] = "Subir Canción";
}

<h2>Subir Canción</h2>

<form asp-controller="Cancion" asp-action="Subir" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Título</label>
        <input name="Titulo" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Género</label>
        <input name="Genero" class="form-control" />
    </div>
    <div class="form-group">
        <label>Archivo de audio (.mp3)</label>
        <input type="file" name="AudioFile" class="form-control" accept=".mp3" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Subir</button>
</form>