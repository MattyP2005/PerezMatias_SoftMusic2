@model HerramientasdeProgramacion.Modelos.Usuario

<h2 class="mb-4">Editar Perfil</h2>

<form asp-action="EditarPerfil" asp-controller="Usuarios" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagen de perfil</label>
        <input type="file" name="ImagenPerfil" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagenPerfilUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImagenPerfilUrl" class="rounded" style="max-width: 120px;" />
            <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" name="EliminarImagen" id="EliminarImagen" />
                <label class="form-check-label" for="EliminarImagen">Eliminar imagen actual</label>
                <a href="@Url.Action("MiPerfil", "Usuarios")">
            </div>
        </div>
    }
    <button type="submit" class="btn btn-success">Guardar cambios</button>
</form>